include ../../../../templates/admin

block main
    section#main-content
        section.wrapper.site-min-height
            .row.mt
                .col-md-12
                    .content-panel
                        table.table.table-striped.table-advance.table-hover
                            h4
                                | All Staffs
                                button.btn.btn-theme(style='margin-left: 5px;', type='button', data-toggle='modal', data-target='#add')
                                    i.fa.fa-user-plus
                                    |  Add Staff
                            thead
                                tr
                                    th
                                        i.fa.fa-bookmark
                                        |  ID
                                    th
                                        i.fa.fa-user
                                        |  Name
                                    th
                                        i.fa.fa-phone
                                        |  Contact
                                    th
                                        i.fa.fa-user
                                        |  Email
                                    th
                                        i.fa.fa-user
                                        |  Branch
                                    th
                                        i.fa.fa-edit
                                        |  Action
                            tbody
                                tr
                                    td 1
                                    td John Doe
                                    td 09999888776
                                    td johndoe@gmail.com
                                    td Unassigned
                                    td
                                        button#view.btn.btn-info.btn-xs(data-toggle='popover', data-trigger='hover', data-placement='top', data-content='View Account')
                                            i.fa.fa-search
                                        button#edit.btn.btn-success.btn-xs(data-toggle='popover', data-trigger='hover', data-placement='top', data-content='Edit Account')
                                            i.fa.fa-edit
                                        button.btn.btn-danger.btn-xs(data-toggle='popover', data-trigger='hover', data-placement='top', data-content='Remove Account Permanently')
                                            i.fa.fa-trash-alt
            // /content-panel
    // MODAL ADD STAFF
    #add.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                    h4#myModalLabel.modal-title Register a Staff
                form(action='POST', method='')
                    .modal-body
                        .container-fluid
                            .row
                                .col-xs-12
                                    h5 Personal Info
                                    hr
                            .container-fluid(style='padding:1rem 4rem 1rem 4rem;')
                                .row
                                    .col-md-6
                                        .form-group
                                            label.control-label First Name
                                            input.form-control(type='text')
                                    .col-md-6
                                        .form-group
                                            label.control-label Last Name
                                            input.form-control(type='text')
                                .row
                                    .col-md-6
                                        .form-group
                                            label.control-label Mobile Number
                                            input.form-control(type='text', value='+639')
                                    .col-md-6
                                        .form-group
                                            label.control-label Email
                                            input.form-control(type='email')
                            .row
                                .col-md-12
                                    h5 Login Information
                                    hr
                            .container-fluid(style='padding:1rem 4rem 1rem 4rem;')
                                    .row
                                        .col-md-6
                                            .form-group
                                            label.control-label Username
                                            input.form-control(type='text')
                                        .col-md-6
                                            .form-group
                                                label.control-label Password
                                                input.form-control(type='password')
                                    .row
                                        .col-md-4
                                          label(for='file') Display Image
                                          input#file.inputfile(type='file')
                    .modal-footer
                      button.btn.btn-default(type='button', data-dismiss='modal') Close
                      button.btn.btn-primary(type='button') Add Staff
    // VIEW STAFF
    #view-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                    h4#myModalLabel.modal-title View a Staff
                    form(action='POST', method='')
                        .modal-body
                            .container-fluid
                                .row
                                    .col-md-12
                                        br
                                        img.img-circle(src='../assets/img/ui-sam.jpg', width='200x;', style='margin-left:30%;')
                                        br
                                        br
                                        hr
                                .container-fluid
                                    .row
                                        h5
                                            b Name:
                                            |  John Doe
                                            br
                                            br
                                            b Mobile Number:
                                            |  09291964686
                                            br
                                            br
                                            b E-mail Address:
                                            |  johndoe@gmail.com
                                            br
                                            br
                                            b Branch:
                                            |  Sta. Mesa
                                            br
                        .modal-footer
                            button.btn.btn-default(type='button', data-dismiss='modal') Close
    // MODAL EDIT STAFF
    #edit-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                    h4#myModalLabel.modal-title Edit Staff Information
                    form(action='POST', method='')
                        .modal-body
                            .container-fluid
                                .row
                                    .col-xs-12
                                        h5 Personal Info
                                        hr
                                .container-fluid(style='padding:1rem 4rem 1rem 4rem;')
                                      .row
                                        .col-md-6
                                            .form-group
                                                label.control-label First Name
                                                input.form-control(type='text')
                                        .col-md-6
                                            .form-group
                                                label.control-label Last Name
                                                input.form-control(type='text')
                                        .row
                                            .col-md-6
                                                .form-group
                                                    label.control-label Mobile Number
                                                    input.form-control(type='text', value='+639')
                                            .col-md-6
                                                .form-group
                                                    label.control-label Email
                                                    input.form-control(type='email')
                                .row
                                    .col-md-12
                                        h5 Login Information
                                        hr
                                .container-fluid(style='padding:1rem 4rem 1rem 4rem;')
                                    .row
                                        .col-md-6
                                            .form-group
                                                label.control-label Username
                                                input.form-control(type='text')
                                        .col-md-6
                                            .form-group
                                                label.control-label Password
                                                input.form-control(type='password')
                                    .row
                                        .col-md-4
                                            label(for='file') Display Image
                                            input#file.inputfile(type='file')
                        .modal-footer
                            button.btn.btn-default(type='button', data-dismiss='modal') Close
                            button.btn.btn-primary(type='button') Save
script.
  $(document).ready(function () {
      $('[data-toggle="popover"]').popover();
      $("#datepicker").datepicker({
          changeMonth: true,
          changeYear: true
  });

  $('#view').click(function () {
        $('#view-modal').modal();
      })

  $('#edit').click(function () {
      $('#edit-modal').modal();
      })
  });